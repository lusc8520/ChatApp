<UserControl x:Class="de.hsfl.vs.hul.chatApp.client.View.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:de.hsfl.vs.hul.chatApp.client.ViewModel.Chat"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource MainViewModel},
              Path=ChatViewModel}">
    <Grid Background="#313338">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <ListView Background="#2b2d31"
                      ItemsSource="{Binding Chats}"
                      BorderThickness="0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem"
                           BasedOn="{StaticResource ChatItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border Background="{TemplateBinding Background}"
                                            Height="50"
                                            CornerRadius="4"
                                            Margin="8, 2, 8, 2">
                                        <TextBlock Text="{Binding ChatName}"
                                                   Foreground="White"
                                                   FontSize="25"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
            
            <Grid Grid.Row="1" Background="#1e1f22">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        FontSize="25"
                        Margin="5"
                        ToolTip="Logout"
                        Content="ðŸ¡„"
                        Command="{Binding LogoutCommand}"
                        Style="{StaticResource LogoutButtonStyle}"/>
                <TextBlock Text="{Binding MainViewModel.User.Username}"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           Margin="5, 0, 0, 0"
                           TextTrimming="CharacterEllipsis"
                           Foreground="White"
                           FontSize="20"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <StackPanel></StackPanel>
            <TextBox Grid.Row="1"
                     Margin="10, 5, 10, 0"
                     FontSize="20"
                     Background="#383a40"
                     BorderBrush="Gray"
                     BorderThickness="0"
                     Padding="10, 0, 10, 0"
                     Foreground="White"
                     VerticalAlignment="Top"
                     Height="50"
                     VerticalContentAlignment="Center"
                     TextWrapping="Wrap">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"></Setter>
                    </Style>
                </TextBox.Resources>
            </TextBox>
        </Grid>
        <!-- <Label Content="The Chat" -->
        <!--        Grid.Column="1" -->
        <!--        Foreground="White" -->
        <!--        FontSize="30"/> -->
        <Label Content="Members"
               Grid.Column="2"
               Foreground="White"
               Background="#2b2d31"
               FontSize="30"/>
    </Grid>
</UserControl>
